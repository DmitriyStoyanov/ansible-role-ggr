[Unit]
Description=selenoid-ui
Requires=consul.service
StartLimitIntervalSec=120
StartLimitBurst=20

[Service]
Type=simple
User=ggr
GuessMainPID=true
ExecStart={{ home_ggr }}/selenoid-ui/selenoid-ui --selenoid-uri=http://127.0.0.1:8888
ExecReload=/bin/kill -HUP $MAINPID
ExecStop=/bin/kill -15 $MAINPID
Restart=always
StartLimitInterval=120
StartLimitBurst=20

[Install]
WantedBy=multi-user.target